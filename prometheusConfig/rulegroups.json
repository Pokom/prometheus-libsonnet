{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/prometheus/prometheus/model/rulefmt/rule-groups",
  "$ref": "#/$defs/RuleGroups",
  "$defs": {
    "Node": {
      "properties": {
        "Kind": {
          "type": "integer"
        },
        "Style": {
          "type": "integer"
        },
        "Tag": {
          "type": "string"
        },
        "Value": {
          "type": "string"
        },
        "Anchor": {
          "type": "string"
        },
        "Alias": {
          "$ref": "#/$defs/Node"
        },
        "Content": {
          "items": {
            "$ref": "#/$defs/Node"
          },
          "type": "array"
        },
        "HeadComment": {
          "type": "string"
        },
        "LineComment": {
          "type": "string"
        },
        "FootComment": {
          "type": "string"
        },
        "Line": {
          "type": "integer"
        },
        "Column": {
          "type": "integer"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "Kind",
        "Style",
        "Tag",
        "Value",
        "Anchor",
        "Alias",
        "Content",
        "HeadComment",
        "LineComment",
        "FootComment",
        "Line",
        "Column"
      ]
    },
    "RuleGroup": {
      "properties": {
        "name": {
          "type": "string"
        },
        "interval": {
          "type": "integer"
        },
        "limit": {
          "type": "integer"
        },
        "rules": {
          "items": {
            "$ref": "#/$defs/RuleNode"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "name",
        "rules"
      ]
    },
    "RuleGroups": {
      "properties": {
        "groups": {
          "items": {
            "$ref": "#/$defs/RuleGroup"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "groups"
      ]
    },
    "RuleNode": {
      "properties": {
        "record": {
          "$ref": "#/$defs/Node"
        },
        "alert": {
          "$ref": "#/$defs/Node"
        },
        "expr": {
          "$ref": "#/$defs/Node"
        },
        "for": {
          "type": "integer"
        },
        "keep_firing_for": {
          "type": "integer"
        },
        "labels": {
          "patternProperties": {
            ".*": {
              "type": "string"
            }
          },
          "type": "object"
        },
        "annotations": {
          "patternProperties": {
            ".*": {
              "type": "string"
            }
          },
          "type": "object"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "expr"
      ]
    }
  }
}